import turtle

window = turtle.Screen()
window.bgcolor("pink")
window.title("Mazerunner")
window.setup(1050,1050)

class Pen(turtle.Turtle):
  def __init__(self):
    turtle.Turtle.__init__(self)
    self.shape("square")
    self.color("white")
    self.penup()
    self.speed(0)

levels = [""]

level_1 = [
